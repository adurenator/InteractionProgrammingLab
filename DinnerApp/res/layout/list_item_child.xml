<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/preparation_list_lightgrey"
    android:padding="10sp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/preparation_dish_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/bakedbrie" />

        <TextView
            android:id="@+id/preparation_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="10sp"
            android:text="A very good dish"
            android:textSize="25sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/preparation_dish_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10sp" android:paddingBottom="10sp"
        android:text="A hell of a lot of text of a lot of nonsense of a lot of rubbish."
        android:textSize="15sp" />

</LinearLayout>