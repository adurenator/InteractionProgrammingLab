<LinearLayout 
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:id="@+id/activity_start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    tools:context=".MainActivity" >
    
    <TextView
        android:id="@+id/dinnerAppTitle"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
    	android:paddingTop="10dp"
    	
    	android:textSize="30sp"
    	android:textAlignment="center"
        android:text="@string/start_screen_tittle">
    </TextView>

    <ImageView
        android:id="@+id/start_screen_image"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        
        android:src="@drawable/start_screen_image" 
        android:contentDescription="@string/start_screen_image_description"
    />

    <TextView
        android:id="@+id/dinnerAppDescription"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="@string/start_screen_description">
    </TextView>

    <ImageButton
        android:id="@+id/start_screen_button"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        
        android:src="@drawable/start_screen_image_button"
        android:contentDescription="@string/start_screen_image_button_description"
        android:background="@android:color/transparent"         
        
    />

</LinearLayout>