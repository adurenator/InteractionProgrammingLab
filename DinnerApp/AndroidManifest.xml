<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.kth.csc.iprog.dinnerplanner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="DinnerPlannerApplication">
        <activity
            android:name="se.kth.csc.iprog.dinnerplanner.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="se.kth.csc.iprog.dinnerplanner.GuestSelection_Activity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="se.kth.csc.iprog.dinnerplanner.DishChooser"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="se.kth.csc.iprog.dinnerplanner.DescriptionPopup"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        
        <activity
            android:name="se.kth.csc.iprog.dinnerplanner.PreparationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="se.kth.csc.iprog.dinnerplanner.Ingredients"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        
    </application>

</manifest>